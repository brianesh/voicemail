{
  "manifest_version": 3,
  "name": "Voice Controlled Gmail Assistant",
  "version": "1.0",
  "description": "Control Gmail using voice commands",
  "permissions": [
    "identity",
    "storage",
    "cookies",
    "https://accounts.google.com/",
    "https://mail.google.com/"
  ],
  "content_security_policy": "script-src 'self' https://accounts.google.com; object-src 'self'",
  "host_permissions": [
    "https://mail.google.com/*",
    "https://accounts.google.com/*"
  ],
  "background": {
    "service_worker": "background/background.js"
  },
  "oauth2": {
    "client_id": "629991621617-u5vp7bh2dm1vd36u2laeppdjt74uc56h.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/gmail.readonly",
      "https://www.googleapis.com/auth/gmail.modify",
      "https://www.googleapis.com/auth/gmail.send"
    ]
  },
  "action": {
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    },
    "default_title": "Voice Controlled Gmail Assistant",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": [
        "content/speechRecognition.js",
        "content/content.js",
        "content/wakeWordDetector.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [{
    "resources": ["oauth-callback.html"],
    "matches": ["https://accounts.google.com/*"]
  }]
}