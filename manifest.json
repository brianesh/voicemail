{
    "manifest_version": 3,
    "name": "Email Voice Assistant",
    "version": "1.0",
    "description": "A Chrome extension that helps visually impaired users interact with email using voice.",
    "icons": {
      "16": "src/assets/icon16.png",
      "48": "src/assets/icon48.png",
      "128": "src/assets/icon128.png"
    },
    "permissions": [
      "activeTab",
      "storage",
      "tts",
      "identity",
      "microphone"
    ],
    "background": {
      "service_worker": "src/scripts/background.js"
    },
    "action": {
      "default_popup": "src/html/popup.html",
      "default_icon": {
        "16": "src/assets/icon16.png",
        "48": "src/assets/icon48.png",
        "128": "src/assets/icon128.png"
      }
    }
  }
  