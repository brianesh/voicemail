{
  "manifest_version": 3,
  "name": "Voice-Controlled Email Assistant",
  "version": "1.0",
  "description": "Fully hands-free voice-controlled Gmail assistant",
  "permissions": ["tabs", "activeTab", "storage"],
  "background": {
      "service_worker": "background.js"
  },
  "host_permissions": ["https://mail.google.com/*"],
  "content_scripts": [
      {
          "matches": ["https://mail.google.com/*"],
          "js": ["content.js"]
      }
  ],
  "action": {
      "default_popup": "popup.html"
  }
}
